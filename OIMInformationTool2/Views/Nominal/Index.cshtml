@model IEnumerable<OIMInformationTool2.Models.Nominal>

@{
    ViewData["Title"] = "Nominal";
}

<div class="row justify-content-between align-items-center" style="margin-top: 10px">
    <div class="col-4">
        <h1>Nominal</h1>
    </div>
    <div class="col-4">
        <a asp-action="Create" class="btn btn-oim">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#FFFFFF" class="bi bi-plus-square text-w" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
            </svg>
            Agregar
        </a>
        <a asp-action="SaveToExcel" class="btn btn-oim" style="margin-left: 10px">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#FFFFFF" class="bi bi-box-arrow-down" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M3.5 10a.5.5 0 0 1-.5-.5v-8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 .5.5v8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 0 0 1h2A1.5 1.5 0 0 0 14 9.5v-8A1.5 1.5 0 0 0 12.5 0h-9A1.5 1.5 0 0 0 2 1.5v8A1.5 1.5 0 0 0 3.5 11h2a.5.5 0 0 0 0-1h-2z" />
                <path fill-rule="evenodd" d="M7.646 15.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 14.293V5.5a.5.5 0 0 0-1 0v8.793l-2.146-2.147a.5.5 0 0 0-.708.708l3 3z" />
            </svg>
            Exportar a Excel
        </a>
    </div>
</div>

<div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4 pt-2">
    <table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaAsistencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCorte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discapacidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantonId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProvinciaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CondicionEsp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CriterioMovi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentSexual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indicador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parentezco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Periodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAsistencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCorte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discapacidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProvinciaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CondicionEsp.IdCondicionEsp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CriterioMovi.IdCriterioMovi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.IdGenero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentSexual.IdIdentSexual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indicador.IdActividad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidad.IdNacionalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parentezco.IdParentezco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo.IdPeriodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo.IdSexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.IdUsuario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNominal">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdNominal">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdNominal">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>