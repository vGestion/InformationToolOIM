@model OIMInformationTool2.Models.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "/Views/Shared/_LayoutPublico.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="UserLogin" asp-controller="Usuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Correo electrónico</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwrd" class="control-label">Contraseña</label>
                <input asp-for="Passwrd" class="form-control" type="password"/>
                <span asp-validation-for="Passwrd" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

