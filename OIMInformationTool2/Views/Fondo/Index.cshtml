@model IEnumerable<OIMInformationTool2.Models.Fondo>

@{
    ViewData["Title"] = "Fondo";
}

<h1>Fondo</h1>

<p>
    <a asp-action="Create">Agregar</a>
</p>
<a asp-action="SaveToExcel" asp-controller="Fondo">Guardar</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdFondo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdFondo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFondo">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdFondo">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFondo">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
