@model OIMInformationTool2.Actividad

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Actividad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdActividad" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FondoId" class="control-label"></label>
                <select asp-for="FondoId" class="form-control" asp-items="ViewBag.FondoId"></select>
                <span asp-validation-for="FondoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meta" class="control-label"></label>
                <input asp-for="Meta" class="form-control" />
                <span asp-validation-for="Meta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndicadorId" class="control-label"></label>
                <select asp-for="IndicadorId" class="form-control" asp-items="ViewBag.IndicadorId"></select>
                <span asp-validation-for="IndicadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroTotal" class="control-label"></label>
                <input asp-for="NumeroTotal" class="form-control" />
                <span asp-validation-for="NumeroTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CampoReferencia" class="control-label"></label>
                <input asp-for="CampoReferencia" class="form-control" />
                <span asp-validation-for="CampoReferencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormulaCalculo" class="control-label"></label>
                <input asp-for="FormulaCalculo" class="form-control" />
                <span asp-validation-for="FormulaCalculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImplementadorId" class="control-label"></label>
                <select asp-for="ImplementadorId" class="form-control" asp-items="ViewBag.ImplementadorId"></select>
                <span asp-validation-for="ImplementadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UaId" class="control-label"></label>
                <select asp-for="UaId" class="form-control" asp-items="ViewBag.UaId"></select>
                <span asp-validation-for="UaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectorId" class="control-label"></label>
                <select asp-for="SectorId" class="form-control" asp-items="ViewBag.SectorId"></select>
                <span asp-validation-for="SectorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaOimId" class="control-label"></label>
                <select asp-for="AreaOimId" class="form-control" asp-items="ViewBag.AreaOimId"></select>
                <span asp-validation-for="AreaOimId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeriodicidadId" class="control-label"></label>
                <select asp-for="PeriodicidadId" class="form-control" asp-items="ViewBag.PeriodicidadId"></select>
                <span asp-validation-for="PeriodicidadId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

