@{
    ViewBag.Title = "Inicio";
}

@if (this.Context.Session.GetString("tipoUsuario") == "1")
{
    Layout = "/Views/Shared/_Layout.cshtml";
    <img src="https://www.inclusion.gob.ec/wp-content/uploads/2020/08/100017400950_21305.jpg" alt="" class="img-fluid" style="max-height:700px" />
}
else if (this.Context.Session.GetString("tipoUsuario") == "2")
{
    Layout = "/Views/Shared/_LayoutAnalista.cshtml";
    <img src="https://www.inclusion.gob.ec/wp-content/uploads/2020/08/100017400950_21305.jpg" alt="" class="img-fluid" style="max-height:700px" />
}
else if (this.Context.Session.GetString("tipoUsuario") == "3")
{
    Layout = "/Views/Shared/_LayoutGestor.cshtml";
    <img src="https://www.inclusion.gob.ec/wp-content/uploads/2020/08/100017400950_21305.jpg" alt="" class="img-fluid" style="max-height:700px" />
}
else
{
    Layout = "/Views/Shared/_LayoutPublico.cshtml";
    <img src="https://www.inclusion.gob.ec/wp-content/uploads/2020/08/100017400950_21305.jpg" alt="" class="img-fluid" style="max-height:700px" />
}